{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Australia Waste" },
    "data": {
        "url": "data/aus_national_waste_by_category_2022_ver2.csv"
    },
    "transform": [{
        "filter": {
            "and": [{
                    "field": "Category",
                    "equal": "Plastics"
                },
                {
                    "field": "Fate",
                    "equal": "Disposal"
                },
                {
                    "field": "Year",
                    "equal": "2020-2021"
                }
            ]
        }
    }],
    "mark": "bar",
    "encoding": {
        "x": { "field": "Tonnes", "type": "quantitative" },
        "y": { "field": "Jurisdiction_State", "type": "nominal" }
    }
}