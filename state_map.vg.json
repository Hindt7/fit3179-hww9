{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Australia Plastic Waste",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equirectangular"
    },
    "data": {
        "url": "data/STE_2021_AUST_GDA2020.json",
        "format": {
            "type": "topojson",
            "feature": "STE_2021_AUST_GDA2020"
        }
    },
    "mark": { "type": "geoshape", "stroke": "grey", "strokeWidth": 1 },
    "transform": [{
            "lookup": "properties.STE_NAME21",
            "from": {
                "data": {
                    "url": "data/aus_national_waste_by_category_2022_ver2.csv"
                },
                "key": "Jurisdiction_State",
                "fields": [
                    "Year",
                    "Category",
                    "Fate",
                    "Tonnes"
                ]
            }

        },
        {
            "filter": {
                "and": [{
                        "field": "Category",
                        "equal": "Plastics"
                    },
                    {
                        "field": "Fate",
                        "equal": "Disposal"
                    },
                    {
                        "field": "Year",
                        "equal": "2020-2021"
                    }
                ]
            }
        },
        { "calculate": "replace(datum.Tonnes, ',', '')", "as": "Tonnes" },
        { "calculate": "parseInt(datum.Tonnes)", "as": "Tonnes" }
    ],
    "encoding": {
        "color": {
            "field": "Tonnes",
            "type": "quantitative"
        },
        "tooltip": [{
                "field": "properties.STE_NAME21",
                "type": "nominal",
                "title": "State"
            },
            {
                "field": "Tonnes",
                "type": "quantitative",
                "title": "Plastics Waste (Tonnes)"
            }
        ]
    }
}